# ============================================================================
# AWS Configuration
# ============================================================================

# AWS Region where your AppConfig resources are located
AWS_REGION=us-east-1

# AWS Profile to use (from ~/.aws/credentials)
# Leave as 'default' or specify a named profile
AWS_PROFILE=default

# Alternatively, use explicit credentials (NOT recommended for production)
# Uncomment and fill in only if not using AWS credentials file or IAM role
# AWS_ACCESS_KEY_ID=your-access-key-here
# AWS_SECRET_ACCESS_KEY=your-secret-key-here

# ============================================================================
# AWS AppConfig Resource IDs
# ============================================================================

# AppConfig Application ID
# Get with: aws appconfig list-applications
APPCONFIG_APPLICATION_ID=cuw93oq

# AppConfig Environment ID
# Get with: aws appconfig list-environments --application-id <app-id>
APPCONFIG_ENVIRONMENT_ID=29mnww0

# AppConfig Configuration Profile ID
# Get with: aws appconfig list-configuration-profiles --application-id <app-id>
APPCONFIG_PROFILE_ID=v78kjzf

# How often to poll for configuration updates (in seconds)
APPCONFIG_POLL_INTERVAL=60

# ============================================================================
# .NET API Settings
# ============================================================================

# ASP.NET Core environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development

# API port mappings
API_PORT=5000
API_PORT_HTTPS=5001

# ============================================================================
# Angular Frontend Settings
# ============================================================================

# Node environment
NODE_ENV=development

# Angular dev server port
ANGULAR_PORT=4200

# API URL for Angular app to connect to
# In Docker network, use service name: http://dotnet-api:5000
# For local development outside Docker: http://localhost:5000
API_URL=http://dotnet-api:5000

# ============================================================================
# CORS Configuration
# ============================================================================

# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:80

# ============================================================================
# Application Names
# ============================================================================

# Update these with your actual Nx app names
ANGULAR_APP_NAME=FeatureFlag
DOTNET_APP_NAME=FeatureFlagAPI

# ============================================================================
# Optional: Additional Configuration
# ============================================================================

# Log level for .NET application
LOGGING_LOGLEVEL_DEFAULT=Information
LOGGING_LOGLEVEL_MICROSOFT=Warning

# Enable/disable Swagger in production
ENABLE_SWAGGER=true